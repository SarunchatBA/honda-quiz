@model IEnumerable<ApproveProject.Repository.ApproveCredit>

@{
    ViewBag.Title = "View Data";
}

<h2>Show Data</h2>

<p>
    @Html.ActionLink("Create New", "Create") | 

    @Html.ActionLink("Send Approve", "Send") |

    @Html.ActionLink("View History Transaction", "Log")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Seq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(k => k.Seq)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Seq)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Credit)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
